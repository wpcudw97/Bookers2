    <main>
      <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr><%= image_tag @user.get_profile_image %></tr>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
    	     <th>introduction</th>
    	     <th></th>
    	 </tr>
      </table>

    <div class='row'>
      <a class="btn btn-outline-secondary btn-block edit_user_61557" href="#">
      <i class="fas fa-user-cog"></i></a>
    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book do |f| %>
      <h4 class="new-book-title">Title</h4>
        <%= f.text_field :title , class:"form-control book_title" , id:"book_title" %>
      <h4 class="new-book-body">Opinion</h4>
        <%= f.text_area :body , class:"form-control book_body" , id:"book_body"%>
      <%= f.submit 'Create Book' , class:"btn btn-success" %>
    <% end %>

    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
  </main>
  </body>
</html>